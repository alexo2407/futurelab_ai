# Habilitar rewrite engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /futurelab_ai/
    
    # Deshabilitar listado de directorios
    Options -Indexes
    
    # Redirigir todo a index.php excepto archivos existentes (imágenes, css, js)
    RewriteCond %{REQUEST_FILENAME} !-f
    # Nota: Quitamos la condición !-d para que el acceso a carpetas también vaya al index.php (404)
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Proteger archivos sensibles
<FilesMatch "^(config\.php|\.env|composer\.json|composer\.lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Seguridad adicional
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# PHP settings
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>
